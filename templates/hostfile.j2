127.0.0.1 localhost.localdomain localhost {{ hostvars[inventory_hostname]['ansible_facts']['hostname'] }}.{{ www_domain }} {{ hostvars[inventory_hostname]['ansible_facts']['hostname'] }}

# The following lines are desirable for IPv6 capable hosts
::1 ip6-localhost ip6-loopback
fe00::0 ip6-localnet
ff00::0 ip6-mcastprefix
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters
ff02::3 ip6-allhosts

{% for host in  q('ansible.builtin.inventory_hostnames', common_hostfile_groups | join(':')) %}
{%- set target_ip = [] -%}
{%- set target_ip = lookup('dig', host ~ '.' ~ www_domain, real_empty=true) -%}
{%- if target_ip == [] %}
{%- set target_ip = ansible_host -%}
{%- endif -%}
{% if target_ip is ansible.utils.ipv4 %}
{{ target_ip  }} {{host}}.{{ www_domain }} {{ host }}
{% endif %}
{% endfor %}
